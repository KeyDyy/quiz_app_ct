resource_group_name = "saas-app-rg"
location           = "westeurope"
environment_name   = "prod"

tags = {
  Environment = "Production"
  Project     = "SaaS App"
}

container_apps = {
  tenant1 = {
    image        = "yourregistry.azurecr.io/your-app:latest"
    cpu          = 0.5
    memory       = "1Gi"
    min_replicas = 1
    max_replicas = 3
    env_vars = {
      DATABASE_URL = "your-database-url"
      API_KEY      = "your-api-key"
    }
    secrets = {
      DB_PASSWORD = "your-db-password"
    }
  }
  tenant2 = {
    image        = "yourregistry.azurecr.io/your-app:latest"
    cpu          = 0.5
    memory       = "1Gi"
    min_replicas = 1
    max_replicas = 3
    env_vars = {
      DATABASE_URL = "your-database-url"
      API_KEY      = "your-api-key"
    }
    secrets = {
      DB_PASSWORD = "your-db-password"
    }
  }
}

vnet_address_space     = "10.0.0.0/16"
subnet_address_prefix  = "10.0.0.0/24"
domain_name           = "yourdomain.com"

# Certificate configuration
certificate_blob_base64 = "base64-encoded-certificate-blob"
certificate_password    = "your-certificate-password" 